import UIKit

class ViewController: UIViewController {

    override func viewDidLoad() {
        super.viewDidLoad()
        // Do any additional setup after loading the view, typically from a nib.
    
        let alerta = UIAlertController(title: "Destruir",
            message: "¿Desea destruir el mundo?",
            preferredStyle: UIAlertControllerStyle.ActionSheet)
        
        let accion1 = UIAlertAction(title: "Sí",
            style: UIAlertActionStyle.Default) { _ in
                alerta.dismissViewControllerAnimated(true, completion: nil) }
        
        let accion2 = UIAlertAction(title: "No",
            style: UIAlertActionStyle.Cancel) { _ in }
        
        alerta.addAction(accion1)
        alerta.addAction(accion2)
        self.presentViewController(alerta, animated: true, completion: nil)
    
    }
        
    override func didReceiveMemoryWarning() {
        super.didReceiveMemoryWarning()
        // Dispose of any resources that can be recreated.
    }


}
